<!DOCTYPE html><!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/public/css/stylesheet.css" />
    <title>Register</title>
  </head>
  <body>
    <main>
      <div class="box">
        <h2>Register</h2>
        <br />
        <br />
        <form method="post" action="/user/shelter/register">
          <input
            type="email"
            id="inputs"
            name="email"
            placeholder="Email"
            required
          />
          <input
            type="password"
            id="inputs"
            name="password"
            placeholder="Password"
            required
          />
          <input
                  type="text"
                  id="inputs"
                  name="location"
                  placeholder="Location"
                  required
          />
          <input
            type="text"
            id="inputs"
            name="name"
            placeholder="Charity Name"
            required
          />
          <input
            type="number"
            id="inputs"
            name="number"
            placeholder="Charity ID"
            required
          />
          <br />
          <br />
          
          <input type="submit" value="Register" id="styledButton">
        </form>
      </div>
    </main>
  </body>
</html>
